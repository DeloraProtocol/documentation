{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "custom": {
    "css": [
      "styles/custom.css"
    ]
  },
  "name": "Delora",
  "colors": {
    "primary": "#0088FF",
    "light": "#0088FF",
    "dark": "#0088FF"
  },
  "background": {
    "color": {
      "dark": "#080A08", 
      "light": "#ffffff"
    }
  },
  "favicon": {
    "light": "/logo/BlackLogo.png",
    "dark": "/logo/BlackLogo.png"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "icon": "github",
          "href": "https://github.com/deloraprotocol/"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "ABOUT",
            "pages": [
              "about",
              "overview/about/get-started",
              "concept/partnership-requests"
            ]
          },
          {
            "group": "PROTOCOL",
            "pages": [
              "protocol/protocol-overview",
              "protocol/smart-contract-architecture",
              "protocol/smart-contract-addresses",
              "protocol/fee-configuration"
            ]
          },
          {
            "group": "INTEGRATIONS",
            "pages": [
              "integrations/connected-chains",
              "integrations/evm-providers",
              "integrations/solana-providers"
            ]
          },
          {
            "group": "EXAMPLES",
            "pages": [
              "examples/transaction-flow/ethereum",
              "examples/transaction-flow/solana",
              "examples/metadata-api"
            ]
          },
          {
            "group": "LEARN MORE",
            "pages": [
              {
                "group": "Getting Integrated with Delora",
                "pages": [
                  "overview/learn-more/getting-integrated-with-delora/overview",
                  "overview/learn-more/getting-integrated-with-delora/for-dexs-and-aggregators",
                  "overview/learn-more/getting-integrated-with-delora/bridges"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Endpoints",
            "pages": [
              "api-reference/endpoint/get-a-quote-for-a-token-transfer",
              "api-reference/endpoint/get-chains",
              "api-reference/endpoint/get-tools",
              "api-reference/endpoint/get-tokens",
              "api-reference/endpoint/get-token"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/images/DeloraDocsBlack.png",
    "dark": "/images/DeloraDocsWhite.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Get Started",
        "href": "https://portal.delora.build"
      },
      {
        "label": "Support",
        "href": "https://t.me/whoisfedelya"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/deloraprotocol",
      "github": "https://github.com/deloraprotocol",
      "linkedin": "https://www.linkedin.com/company/deloraprotocol",
      "website": "https://delora.build"
    }
  }
}
